<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:text="@string/Logo"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        app:fontFamily="@font/fangyuan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:background="#353232"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/version_code"
        android:textColor="#958F8F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/policy"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:text="@string/terms_conditions"
        android:textColor="#958F8F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/right"
        android:textAlignment="center"
        android:textColor="#958F8F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/policy"
        android:layout_width="90dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:text="@string/privacy_policy"
        android:textColor="#958F8F"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.452" />

    <ImageView
        android:id="@+id/stockBtnIcon"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        app:srcCompat="@drawable/stock" />

    <TextView
        android:id="@+id/promotionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Promotion"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/stockBtn"
        app:layout_constraintTop_toBottomOf="@+id/PromotionBtnIcon" />

    <TextView
        android:id="@+id/promotionBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Promotion"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/stockBtn"
        app:layout_constraintTop_toBottomOf="@+id/PromotionBtnIcon" />

    <TextView
        android:id="@+id/profileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="@string/profile"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/stockBtn"
        app:layout_constraintTop_toBottomOf="@+id/profileBtnIcon" />

    <ImageView
        android:id="@+id/PromotionBtnIcon"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintEnd_toStartOf="@+id/profileBtnIcon"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/stockBtnIcon"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        app:srcCompat="@drawable/promotion_icon" />

    <ImageView
        android:id="@+id/profileBtnIcon"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="56dp"
        android:clickable="true"
        android:onClick="onClick"
        app:layout_constraintStart_toEndOf="@+id/stockBtnIcon"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/stockBtn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Stock"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stockBtnIcon" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="500dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="690dp" />

    <ViewFlipper
        android:id="@+id/activity_main_menu_viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        app:layout_constraintTop_toTopOf="@+id/guideline33"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/main_menu_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline33"
            app:srcCompat="@drawable/slide7" />

        <ImageView
            android:id="@+id/main_menu_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline33"
            app:srcCompat="@drawable/slide8" />

        <ImageView
            android:id="@+id/main_menu_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline33"
            app:srcCompat="@drawable/slide9" />

    </ViewFlipper>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="389dp" />

    <ImageView
        android:id="@+id/holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline30"
        app:srcCompat="@drawable/holder" />

</androidx.constraintlayout.widget.ConstraintLayout>